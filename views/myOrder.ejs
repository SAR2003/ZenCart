<%- include("layouts/header")  -%>

<% if(typeof orderedProducts=="undefined"){ %>
<h5 style="text-align: center; font-size: xx-large; font-weight: 900;">No items are Ordered</h5>
<%} else { %>
  

<div class="container-fluid pt-5">
     
    <div class="row px-xl-5">
        <div class="col-lg-12 table-responsive mb-5">
            
            <table class="table table-bordered text-center mb-0">
                <h4 style="text-align: center; font-size: 6em; background: #904d4d;" >Orders</h4>
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Products</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Sub-total</th>
                        
                    </tr>
                </thead>
                <tbody class="align-middle">
                    <% orderedProducts.forEach(function(prod){%>
                   <tr>
                    
                        <td class="align-middle"><img src="<%= prod.image %>" alt="" style="width: 70px;"> <%= prod.title %>  </td>
                        <td class="align-middle"><%= prod.price %></td>
                        <td class="align-middle">
                            <div class="input-group quantity mx-auto" style="width: 100px;">
                                
                                
                                <input type="text" class="form-control form-control-sm bg-secondary text-center" value=<%= prod.qty %>>
                              
                                
                            </div>
                        </td>
                        <td class="align-middle"><%= (prod.price) %></td>
                        
                    </tr>
                    
                    <%})%>
                    
                </tbody>
            </table>
            
        </div>
        
    </div>
</div>
<%  } %>
<script>
document.getElementById("clear_cart").addEventListener("click",function()
{
    if(!confirm("are you sure u want to clear cart"))
    event.preventDefault();
})
</script>

<%- include("layouts/footer")  -%>